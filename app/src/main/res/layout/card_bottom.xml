<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/white_bottom_curved"
    android:layout_width="match_parent"
    app:behavior_hideable="true"
    app:behavior_peekHeight="400dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_height="wrap_content">




    <View
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_4sdp"
        android:layout_gravity="center"
        android:background="#A9A9A9"
        android:layout_margin="@dimen/_10sdp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/black"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="@dimen/_100sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_15sdp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:id="@+id/text"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:text="Perks of being a  \nmember of FamPay 🔥"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/text"
                android:textSize="@dimen/_10ssp"
                android:text="Read blog -->"
                />


            <ImageView
                android:layout_width="148dp"
                android:layout_height="118dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="-50dp"
                android:scaleType="centerInside"
                android:src="@drawable/splash_bird"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:layout_margin="@dimen/_10sdp"
        android:text="Delightful features for you"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        />


    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_220sdp"
                app:cardBackgroundColor="#05608d"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="@dimen/_100sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/_15sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:id="@+id/text2"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:text="Coins and rewards"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@id/text2"
                        android:textSize="@dimen/_11ssp"
                        android:text="Earn coins for your all\nactivites, and use them\nto win reward"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/dollar"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_220sdp"
                app:cardBackgroundColor="#ffdda0"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="@dimen/_100sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/_15sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16ssp"
                        android:id="@+id/text3"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:text="Save the streak"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@id/text3"
                        android:textSize="@dimen/_10ssp"
                        android:text="Add money to your\nsavings everyday and\nwin rewards 🎁"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/monkey"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_220sdp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="@dimen/_100sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="@dimen/_15sdp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        android:id="@+id/text4"
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:text="Club section"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_below="@id/text4"
                        android:textSize="@dimen/_10ssp"
                        android:text="Games, quizes, events\nand lot more activites to\nkeep you engaged"
                        />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/one"
                        app:tint="@color/white"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </HorizontalScrollView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#E6000000"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="@dimen/_100sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/_15sdp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_100sdp"
                android:rotationX="30"
                android:rotationY="-20"
                android:layout_alignParentEnd="true"
                android:src="@drawable/visa_front"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:id="@+id/text5"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:text="This is how your first \nFamCard looks like 🌟"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/text5"
                android:textSize="@dimen/_10ssp"
                android:id="@+id/ww"
                android:text="Watch video"
                />


            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_15sdp"
                app:cardBackgroundColor="@color/white"
                android:shape="ring"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@+id/ww"
                android:layout_below="@id/text5"
                app:cardCornerRadius="100dp"
                android:layout_height="@dimen/_15sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        app:tint="#A4A3A1"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_baseline_play_arrow_24"
                        />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>